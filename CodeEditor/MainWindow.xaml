<Window
    x:Class="CodeEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:CodeEditor.Components"
    Title="Code Editor"
    Height="600"
    Width="800">

    <DockPanel>
        <!-- Menu Bar on Top -->
        <components:MenuBar x:Name="MenuBarControl" DockPanel.Dock="Top"/>

        <!-- Frame for Page Navigation -->
        <Frame
            x:Name="MainFrame"
            NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>

