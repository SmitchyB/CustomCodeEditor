<UserControl x:Class="CodeEditor.Components.FindBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="30"
             Background="#eee"
             HorizontalAlignment="Stretch">
    <DockPanel Margin="2">
        <Button Content="Close" Click="Close_Click" DockPanel.Dock="Right" Margin="2"/>
        <Button Content="Prev" Click="FindPrev_Click" DockPanel.Dock="Right" Margin="2"/>
        <Button Content="Next" Click="FindNext_Click" DockPanel.Dock="Right" Margin="2"/>
        <CheckBox x:Name="CaseSensitiveCheckBox" Content="Case Sensitive" VerticalAlignment="Center" Margin="5,0"/>
        <TextBox x:Name="SearchBox" Width="200" Margin="2" VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
